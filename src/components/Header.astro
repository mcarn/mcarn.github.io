---
import { SITE_CONFIG } from "../utils/constants"
---

<header class="flex justify-center bg-[var(--color-bg-accent)] p-4">
  <nav class="m-0 flex list-none gap-8 p-0">
    {
      SITE_CONFIG.nav.map((item) => (
        <li class="relative">
          <a
            href={item.href}
            class="rounded-md px-4 py-2 font-medium text-[var(--color-text-muted)] no-underline transition-colors hover:text-[var(--color-text)]"
          >
            {item.text}
          </a>
        </li>
      ))
    }
  </nav>
</header>
